                    <label asp-for="Flight_Id" class="control-label"></label>
                    <select name="Flight_Id" class="form-control" asp-items="@(new SelectList(ViewBag.m, "Id", "Flight_Number"))"></select>
                    <span asp-validation-for="Flight_Id" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Passenger_id" class="control-label"></label>
                <select name="Passenger_id" class="form-control" asp-items="@(new SelectList(ViewBag.mp, "Id", "Passenger_Name"))"></select>
                <span asp-validation-for="Passenger_id" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Reservation_Num" class="control-label"></label>
                    <input asp-for="Reservation_Num" class="form-control" />
                    <span asp-validation-for="Reservation_Num" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

