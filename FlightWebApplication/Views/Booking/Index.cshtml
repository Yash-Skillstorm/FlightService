@model IEnumerable<FlightWebApplication.Data.Booking>

@{
    ViewData["Title"] = "List of Bookings";
}

<div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">List of Bookings</h3>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Flight_Num)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Passenger_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation_Num)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Departure_Airport)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Arrival_Airport)
                            </th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => booking.Flight_Num)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => booking.Passenger_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => booking.Reservation_Num)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => booking.Departure_Airport)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => booking.Arrival_Airport)
                            </td>                            
                            <td>@Html.ActionLink("Details", "Details", new { id = booking.Id })</td>
                            @*<td>@Html.ActionLink("Delete", "Delete", new { id = booking.Id })</td>*@
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>