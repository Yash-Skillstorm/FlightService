@model FlightWebApplication.Data.Flight

@{
    ViewData["Title"] = "Create";
}
<div>
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Create New Flight</h3>
            </div>
            <form class="form-horizontal" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="box-body">
                    @*@Html.DropDownList("technologies", new SelectList(ViewBag.m, "activeflight_Id", "flight_Number"))
            @Html.DropDownList("Id", new SelectList(ViewBag.m, "Id", "Flight_Number"), "Please select", new { @id = "ddlFlights" })
                @Html.Hidden("Flight_Number", null, new { @id = "hfFlight_number" })*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Flight_Num" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <select name="Flight_Num" class="form-control" asp-items="@(new SelectList(ViewBag.m, "Id", "Flight_Number"))"></select>
                                    <span asp-validation-for="Flight_Num" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Departure_Airport" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Departure_Airport" class="form-control" placeholder="Departure Airport" />
                                    <span asp-validation-for="Departure_Airport" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Arrival_Airport" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Arrival_Airport" class="form-control" />
                                    <span asp-validation-for="Arrival_Airport" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Departure_Date" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Departure_Date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                                    <span asp-validation-for="Departure_Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Arrival_Date" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Arrival_Date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                                    <span asp-validation-for="Arrival_Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Departure_Time" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Departure_Time" class="form-control" />
                                    <span asp-validation-for="Departure_Time" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Arrival_Time" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Arrival_Time" class="form-control" />
                                    <span asp-validation-for="Arrival_Time" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Seat_Capacity" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Seat_Capacity" class="form-control" />
                                    <span asp-validation-for="Seat_Capacity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="box-footer">
                    <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-info pull-right" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
