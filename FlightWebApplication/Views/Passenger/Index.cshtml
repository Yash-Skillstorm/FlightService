@model IEnumerable<FlightWebApplication.Data.Passenger>
@{
    ViewData["Title"] = "List of Passengers";
}
<div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">List of Passengers</h3>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Passenger_Name) </th>
                            <th>@Html.DisplayNameFor(model => model.Passenger_Age)  </th>
                            <th>@Html.DisplayNameFor(model => model.Passenger_Email)  </th>
                            <th>Details</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var passenger in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelitem => passenger.Passenger_Name) </td>
                                <td>@Html.DisplayFor(modelitem => passenger.Passenger_Age) </td>
                                <td>@Html.DisplayFor(modelitem => passenger.Passenger_Email) </td>
                                <td>@Html.ActionLink("Details", "Details", new { id = passenger.Id })</td>
                                <td>@Html.ActionLink("Delete", "Delete", new { id = passenger.Id })</td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>