@model FlightWebApplication.Data.Passenger

@{
    ViewData["Title"] = "Create New Passenger";
}
<div>
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Create New Passenger</h3>
            </div>
            <form class="form-horizontal" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="box-body">                   
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Passenger_Name" class="col-sm-3 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Passenger_Name" class="form-control" placeholder="Name" />
                                    <span asp-validation-for="Passenger_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Passenger_Age" class="col-sm-3 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Passenger_Age" class="form-control" placeholder="Age"/>
                                    <span asp-validation-for="Passenger_Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Passenger_Email" class="col-sm-3 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Passenger_Email" class="form-control" placeholder="Email"/>
                                    <span asp-validation-for="Passenger_Email" class="text-danger"></span>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-info pull-right" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
