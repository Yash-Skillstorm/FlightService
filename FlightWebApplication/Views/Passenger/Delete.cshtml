@model FlightWebApplication.Data.Passenger

@{
    ViewData["Title"] = "Delete Passenger";
}
<div>
    <div class="col-md-8">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Delete Passenger</h3>
                <h3>Are you sure you want to delete this?</h3>
                <p>@ViewBag.mp</p>
            </div>
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <td class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Passenger_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Passenger_Name)
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Passenger_Age)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Passenger_Age)
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Passenger_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Passenger_Email)
                        </td>
                    </tr>                    
                </tbody>
            </table>
        </div>
    </div>

    <form style="margin-left: 18px; font-size: 20px;" asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
